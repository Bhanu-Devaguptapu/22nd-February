#include<stdio.h>
int main()
{
 int i=1,n,evensum=0,oddsum,sub;
	printf("Enter the value of n:");
	scanf("%d",&n);
	while(i<=n){
	printf("%d\t",i);
	if(i%2==0){
	evensum=evensum+i;}
	else{
	oddsum=oddsum+i;}
	sub=oddsum-evensum;
	i++;
}
printf("evensum=%d\n",evensum);
printf("oddsum=%d\n",oddsum);
printf("Difference= %d\n",sub);
return 0;
}
